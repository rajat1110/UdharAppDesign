<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CheckOtp"
        android:padding="10dp">



    <TextView
            android:id="@+id/pleasebepationtv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pleasebepatient"
            android:layout_marginTop="50dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/yourotpwillgetsoontv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otpwillgetsoon"
            android:layout_marginTop="9dp"
            android:textSize="15dp"
            android:layout_below="@id/pleasebepationtv"
            android:textColor="#000000"/>

    <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7285825080"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_toEndOf="@+id/yourotpwillgetsoontv"
            android:layout_toRightOf="@+id/yourotpwillgetsoontv"
            android:layout_alignBaseline="@+id/yourotpwillgetsoontv"/>




</RelativeLayout>